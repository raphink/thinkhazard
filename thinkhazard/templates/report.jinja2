{% extends "base.jinja2" %}

{% block name %}report{% endblock %}

{% block content %}

  {% if hazard %}
    {% set parent_url = request.route_url('report', divisioncode=parent_division.code, hazardtype=hazard.hazardtype.mnemonic) %}
  {% else %}
    {% set parent_url = request.route_url('report_overview', divisioncode=parent_division.code) %}
  {% endif %}

  {% set overview_url = 'report_overview'|route_url(divisioncode=division.code) %}

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="{{'index'|route_url}}">
          logo think hazard
        </a>
      </div>
      <form id="search" class="navbar-form navbar-left" role="search">
        <div class="form-group form-group-lg">
          {% include 'search.jinja2' %}
        </div>
      </form>
      <div id="navbar" class="">
        <ul class="nav navbar-nav navbar-right">
          <li class="disabled">
            <a href="">About</a>
          </li>
          <li class="disabled">
            <a href="">Contact us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="jumbotron">
    <div class="container text-center">
      <a id="pdf-link" class="btn btn-default hidden-print" href><i class="fa fa-arrow-down"></i> Download PDF</a>

      <!-- breadcrumb -->
      <h4>
        <a href="{{ parent_url }}" title="Report on hazards in {{ parent_division.name }}">{{ parent_division.name }}</a>
      </h4>

      <!-- Division name -->
      <h2>
        <a id="division-name" href="{{ overview_url }}" title="Go back to overview page">{{ division.name }}</a>
      </h2>

      <a class="btn btn-default btn-xs hidden-print" href="{{ overview_url }}" title="Go back to overview page">Overview</a>
      <ul id="hazard-types-list" class="horizontal list-unstyled hazards hidden-print" role="tablist">
        {% for hazard in hazards %}
          {{ hazard_type(hazard) }}
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container">

  <div class="visible-xs-block">xs</div>
  <div class="visible-sm-block">sm</div>
  <div class="visible-md-block">md</div>
    <div class="row">
      <div class="col-md-7">
        {% if hazard %}
          <h1 class="page-header detail level-{{ hazard.categorytype.mnemonic }}">
            {{ hazard.hazardtype.title }}
            <em>
              <small class="pull-right">Hazard level: <span class="level">{{ hazard.categorytype.title }}</span>
              </small>
            </em>
          </h1>
          {% if hazard.description %}
          {{ hazard.description }}
          {% else %}
          {{ hazard.categorytype.description }}
          {% endif %}
          {% if hazard.recommendation_associations %}
          <h3>Recommendations</h3>
          <ul class="recommendations">
          {% for recommendation_association in hazard.recommendation_associations %}
            <li>{{ recommendation_association.recommendation.description }}</li>
          {% endfor %}
          </ul>
          {% endif %}
        {% else %}
          {% for hazard in hazards %}
          <a href="{{ 'report'|route_url(divisioncode=division.code, hazardtype=hazard.hazardtype.mnemonic) }}" aria-controls="{{ hazard.hazardtype.title }}">
            <h1 class="page-header level-{{ hazard.categorytype.mnemonic }}">
              {{ hazard.hazardtype.title }}
              <em>
                <small class="pull-right">Hazard level: <span class="level">{{ hazard.categorytype.title }}</span>
                </small>
              </em>
            </h1>
          </a>
          {% endfor %}
        {% endif %}
      </div>
      <div class="col-md-5 page-break">
        <div class="well print-col-sm-8 print-col-sm-offset-2">
          <div id="map-container">
            <div id="map">
              {% if parent_division %}
              <a id="map-drillup" class="btn btn-default btn-xs drillup control hidden-print" href="{{ parent_url }}">
                Zoom out to {{ parent_division.name }}
              </a>
              {% endif %}
            </div>
          </div>
          {% if hazard %}
          <div class="text-center">
            {{ hazard.hazardtype.mnemonic}} hazard Level
          </div>
          <div class="text-center">
            {{ division.name }}
          </div>
          <div id="legend">
            <ul>
              <li class="level-HIG">
                <i class="square"></i>
                High
              </li>
              <li class="level-MED">
                <i class="square"></i>
                Medium
              </li>
              <li class="level-LOW">
                <i class="square"></i>
                Low
              </li>
              <li class="level-NPR">
                <i class="square"></i>
                Not previously reported
              </li>
            </ul>
          </div>

          <div class="text-center">
            <h5>DATA SOURCE</h5>
            <div>** Put the sources here</div>
          </div>
          {% endif %}
        </div>
        {% if hazard.additionalinfo_associations %}
        <div class="well hidden-print print-col-sm-12">
          <h3>Further resources</h3>
          For further information the following resources could be consulted:
          <ul>
          {% for additionalinfo_association in hazard.additionalinfo_associations %}
          <li>
            <a href="{{ additionalinfo_association.additionalinformation.accessurl }}">
              {{ additionalinfo_association.additionalinformation.title }}
            </a>
          </li>
          {% endfor %}
          </ul>
        </div>
        {% endif %}
        <div class="text-center print-col-sm-12">
          <a href="//www.gfdrr.org/" class="logo-gfdrr">Logo GFDRR</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block scripts %}
{% if debug %}
    <script src="{{('%s/openlayers/dist/ol-debug.js' % node_modules)|static_url}}"></script>
{% else %}
    <script src="{{('%s/openlayers/dist/ol.js' % node_modules)|static_url}}"></script>
{% endif %}
    <script>
      {% if hazard %}
      app.mapUrl = '{{ 'report_json'|route_url(divisioncode=division.code, hazardtype=hazard.hazardtype.mnemonic)}}';
      {% else %}
      app.mapUrl = '{{ 'report_overview_json'|route_url(divisioncode=division.code)}}';
      {% endif %}

      {%- if division %}
      app.divisionCode = {{division.code}};
      {%- else %}
      app.divisionCode = undefined;
      {%- endif %}

      app.divisionBounds = {{bounds}};
      {% if hazard %}
        app.hazardType = '{{hazard.hazardtype.mnemonic}}';
      {% endif %}
    </script>
{% endblock %}

{% macro hazard_type(hazard) %}
<li class="{{ hazard.categorytype.mnemonic }}">
  <a
    {% if hazard.categorytype.mnemonic == 'no-data' %}
    class="disabled"
    {% else %}
    href="{{'report'|route_url(divisioncode=division.code, hazardtype=hazard.hazardtype.mnemonic)}}"
    {% endif %}
     >
    <img src="{{(('thinkhazard:static/images/hazard-icon-%s.png' % hazard.hazardtype.title.lower().replace(' ', '-'))|static_url)}}" />
    {{ hazard.hazardtype.title }}
  </a>
</li>
{% endmacro %}
